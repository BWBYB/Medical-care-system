<view class="container">
  <view class="form-section">
    <view class="form-item">
      <text>职工号</text>
      <input type="text" placeholder="请输入职工号" value="{{employeeId}}" bindinput="onEmployeeIdChange" />
    </view>

    <view class="form-item">
      <text>姓名</text>
      <input type="text" placeholder="请输入姓名" value="{{userName}}" bindinput="onUserNameChange" />
    </view>

    <view class="form-item">
      <text>部门</text>
      <input type="text" placeholder="请输入部门" value="{{department}}" bindinput="onDepartmentChange" />
    </view>

    <button bindtap="bindUserInfo">提交</button>
  </view>
</view>
