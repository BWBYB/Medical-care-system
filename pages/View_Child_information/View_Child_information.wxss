/* pages/View_Child_information/View_Child_information.wxss */
.container {
    padding: 20px;
  }
  
  .children-info {
    margin-top: 30px;
  }
  
  .child-item {
    margin-bottom: 20px;
    padding: 20px;
    background-color: #f8f8f8;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .child-name,
  .child-id {
    display: block;
    margin-bottom: 10px;
    font-size: 18px;
    color: #333;
  }
  
  .no-info {
    text-align: center;
    font-size: 20px;
    color: #888;
    margin-top: 50px;
  }