.container {
  padding: 20px;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 10px;
}

.header-text {
  font-size: 20px;
  font-weight: bold;
}

/* Default margin for spacing between header and messages */
.messages-list {
  margin-top: 20px; /* Initial space */
}

/* Slight increase in margin-top for batch delete buttons */
.batch-mode {
  margin-top: 20px; /* Adjusted to fit buttons without excessive spacing */
}

.message-item-wrapper {
  position: relative;
  overflow: hidden;
  margin-bottom: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.message-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  transition: transform 0.3s;
  padding: 15px;
  position: relative;
}

.message-content {
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.message-text {
  font-size: 16px;
  flex: 1;
}

.message-time {
  font-size: 12px;
  color: #888;
  position: absolute;
  bottom: 10px;
  right: 10px;
}

.delete-button {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 80px;
  background-color: #ff4d4f;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  transform: translateX(80px); /* Hidden by default */
  transition: transform 0.3s;
}

.batch-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
  margin-bottom: 10px;
}

.delete-selected-button,
.cancel-button {
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  border-radius: 10px;
  padding: 8px 12px;
  width: 45%;
  text-align: center;
}

.delete-selected-button {
  background-color: #ff4d4f;
}

.cancel-button {
  background-color: #007acc;
}

.manage-button {
  padding: 10px 16px;
  font-size: 16px;
  background-color: #ff9500;
  color: #ffffff;
  border-radius: 10px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}