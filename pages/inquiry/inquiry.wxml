<view class="container">
  <view class="header">
    <text>报销查询</text>
  </view>

  <!-- 查询 ID 输入框 -->
  <input type="text" placeholder="请输入查询 ID" value="{{queryId}}" bindinput="onQueryIdChange" />

  <!-- 查询按钮 -->
  <button bindtap="queryReimbursement">查询</button>

  <!-- 查询结果 -->
  <view wx:if="{{reimbursement}}">
    <view class="result">
      <text>申请人：{{reimbursement.name}}</text>
      <text>部门：{{reimbursement.department}}</text>
      <text>报销金额：{{reimbursement.amount}}</text>
      <text>报销类型：{{reimbursement.expenseType}}</text>
      <text>报销时间：{{reimbursement.date}}</text>
      <text>状态：{{statusMessage}}</text>
    </view>
  </view>

  <!-- 没有结果时的提示 -->
  <view wx:if="{{!reimbursement && queryId}}">
    <text>未找到该报销申请，请确认查询 ID 是否正确。</text>
  </view>
</view>
