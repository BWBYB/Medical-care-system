.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.query-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #dddddd;
  border-radius: 8rpx;
}

button {
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  background-color: #007acc;
  color: white;
  border-radius: 8rpx;
}

.results-section {
  display: flex;
  flex-direction: column;
}

.result-item {
  padding: 20rpx;
  background-color: #ffffff;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.result-title, .result-status, .result-date {
  font-size: 28rpx;
  color: #333333;
}
