page {
  background-color: #f4f5f7; /* 浅灰背景色 */
}
.container {
  padding: 20px;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 20px;
  text-align: center;
}

.header-text {
  font-size: 20px;
  font-weight: bold;
}

.input-group {
  display: block; /* 改为块级显示，垂直排列 */
  margin-bottom: 20px;
}

.query-input {
  width: 100%; /* 使输入框宽度填满容器 */
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-bottom: 10px; /* 增加与按钮的间距 */
}

.query-button {
  width: 100%; /* 使按钮宽度填满容器 */
  padding: 10px;
  background-color: #007acc;
  color: white;
  font-size: 16px;
  border-radius: 5px;
  text-align: center;
}
