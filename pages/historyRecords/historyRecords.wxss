.container {
  padding: 20px;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.header-text {
  font-size: 20px;
  font-weight: bold;
}

.filters {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.picker {
  margin-bottom: 10px;
  padding: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
}

.record-item {
  padding: 15px;
  border: 1px solid #ddd;
  margin-bottom: 10px;
  border-radius: 5px;
}

.no-records {
  text-align: center;
  color: #999;
  margin-top: 20px;
}
