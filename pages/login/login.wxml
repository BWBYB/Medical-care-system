<!-- login.wxml -->
<view class="container">
  <!-- 登录按钮 -->
  <button class="login-button" bindtap="login">微信登录</button>

  <!-- 显示用户信息 -->
  <view wx:if="{{hasUserInfo}}">
    <text>欢迎，{{userInfo.nickName}}</text>
    <image src="{{userInfo.avatarUrl}}" class="avatar"></image>
  </view>

  <!-- 未获取到用户信息时显示提示 -->
  <view wx:else>
    <text>请点击上面按钮进行微信登录</text>
  </view>
</view>
