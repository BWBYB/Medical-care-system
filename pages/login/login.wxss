/* container 样式 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: linear-gradient(135deg, #f1f8ff, #e0e7ff); /* 添加渐变背景 */
  padding: 30px;
}

/* 登录按钮样式 */
.login-button {
  width: 70%;
  padding: 15px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 50px; /* 圆角按钮 */
  font-size: 20px;
  font-weight: bold;
  transition: all 0.3s ease;
}

/* 鼠标悬停时按钮效果 */
.login-button:hover {
  background-color: #168e12;
  transform: scale(1.05); /* 鼠标悬停时稍微放大 */
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  font-weight: bold;
  color: #1aad19;
  padding: 20px;
}

/* 头像样式 */
.avatar {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  margin-top: 20px;
  border: 3px solid #ffffff; /* 添加白色边框 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

/* 欢迎文本样式 */
.welcome-text {
  font-size: 22px;
  font-weight: 600;
  color: #333;
  margin-top: 10px;
}

/* 提示文本样式 */
.text-info {
  font-size: 16px;
  color: #666;
  margin-top: 15px;
}
