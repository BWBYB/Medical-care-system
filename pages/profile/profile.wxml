<view class="container">
  <!-- Profile Header with User Info -->
  <view class="profile-header">
    <view class="avatar-placeholder">头像</view>
    <text class="user-name">用户名: {{userName}}</text>
    <text class="user-id">用户ID: {{userId}}</text>
  </view>

  <!-- Profile Options -->
  <view class="profile-options">
    <view class="option-item" bindtap="viewPersonalInfo">
      <text>个人信息</text>
    </view>
    <view class="option-item" bindtap="viewSettings">
      <text>设置</text>
    </view>
    <view class="option-item" bindtap="logout">
      <text>退出登录</text>
    </view>
  </view>
</view>
