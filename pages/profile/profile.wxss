page {
  background-color: #f4f5f7; /* 浅灰背景色 */
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

/* 用户信息模块 */
.user-info-module {
  width: 90%;
  padding: 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1); /* 柔和阴影效果 */
}

/* 默认头像圆圈样式 */
.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #e8eaf6; /* 浅蓝背景色 */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.avatar-placeholder image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

/* 用户信息文本 */
.user-info-details {
  display: flex;
  flex-direction: column;
}

.user-info-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.user-info-subtitle {
  font-size: 28rpx;
  color: #666666;
}

/* 功能模块 */
.profile-options {
  width: 90%;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
  overflow: hidden;
}

/* 功能按钮样式 */
.option-item {
  padding: 30rpx;
  font-size: 32rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease, transform 0.1s ease;
}

.option-item:last-child {
  border-bottom: none;
}

/* 按钮按下时的反馈效果 */
.option-item:active {
  transform: scale(0.98);
  background-color: #f7f8fa;
}

/* 特别按钮样式（登录、退出等） */
.login-button {
  background-color: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

/* 退出登录按钮样式 */
.logout-button {
  width: 83%; /* 宽度与其他模块一致 */
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  background-color: #FF5252; /* 红色背景 */
  border-radius: 20rpx;
  margin-top: 30rpx; /* 与上方模块保持间距 */
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1); /* 柔和阴影效果 */
  text-align: center;
  transition: background-color 0.2s ease, transform 0.1s ease;
}

.logout-button:active {
  transform: scale(0.98);
  background-color: #E53935; /* 按下时背景变深 */
}
