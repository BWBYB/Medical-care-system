/* pages/Request_detail/Request_detail.wxss */
.detail-container {
    padding: 20px;
    background-color: #fff;
  }
  
  .detail-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10px;
    padding: 10px 0;
    border-bottom: 1px solid #eee;
  }
  
  .detail-label {
    color: #888;
    flex-shrink: 0;
    width: 100px;
  }
  
  .detail-value {
    flex-grow: 1;
    color: #333;
  }