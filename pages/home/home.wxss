.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.banner {
  width: 100%;
  height: 200rpx; /* 控制 banner 的高度 */
  margin-bottom: 100rpx; /* 增加与 options 的间距 */
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.options {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 20rpx 0;
}

.option {
  width: 40%;
  padding: 20rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}
