.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
  
  .header-image {
    width: 100%;
    height: 200px;
    background-color: #f0f0f0; /* 替换为实际图片路径 */
  }
  
  .button-group {
    display: flex;
    justify-content: space-around;
    margin: 10px 0;
  }
  
  .button {
    padding: 10px 20px;
    background-color: #007aff;
    color: white;
    border-radius: 5px;
  }
  
  .green {
    background-color: green;
  }
  
  .search-bar {
    display: flex;
    justify-content: center;
    margin: 10px 0;
  }
  
  .search-input {
    width: 80%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
  }
  
  .footer {
    display: flex;
    justify-content: space-around;
    background-color: #f8f8f8;
    padding: 10px 0;
    position: fixed;
    bottom: 0;
    width: 100%;
  }
  
  .footer-item {
    flex: 1;
    text-align: center;
    padding: 10px 0;
  }
  
  .footer-item.active {
    color: blue;
  }