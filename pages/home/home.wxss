.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 100rpx; /* 为了给底部导航栏留出空间 */
}

.banner {
  width: 100%;
  height: 200rpx; /* 控制 banner 的高度 */
  margin-bottom: 100rpx; /* 增加与 options 的间距 */
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.options {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 20rpx 0;
}

.option {
  width: 40%;
  padding: 20rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

/* Custom Navbar 样式 */
.tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx; /* 根据需求调整高度 */
  background-color: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  font-weight: bold;
  font-size: 32rpx;
}
