.tab-bar {
  position: fixed;
  bottom: env(safe-area-inset-bottom); /* 适配底部安全区域 */
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  height: 60px; /* 可以适当调整 */
  box-shadow: 0px -1px 5px rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  color: #888888;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 5px;
}
